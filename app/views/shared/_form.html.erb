<%= simple_form_for :treehouses, :url => "/treehouses", method: "get", html: {class: 'form-inline custom-select2'} do |f| %>
  <% all_locations = Treehouse.select(:location).map(&:location).uniq %>
  <%= f.input :location, :collection => all_locations, prompt: "Choose a destination", input_html: { class: 'select2 form-control' }, label: false %>
  <%= f.input :checkin, as: :string, required: false, input_html: { id: "range_start", class: "datepicker text-center" }, label: false, placeholder: "CheckIn" %>
  <%= f.input :checkout, as: :string, required: false, input_html: { id: "range_end", class: "datepicker text-center" }, label: false, placeholder: "CheckOut" %>
  <%= f.input :guests_number, :collection => [1, 2, 3, 4], label: false, prompt: "Guests" %>
  <%= f.button :submit, "Search", class: "btn btn-primary" %>
<% end %>
