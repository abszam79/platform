<%= form_tag treehouses_path, method: :get, class: 'form-inline' do %>

  <%= text_field_tag 'treehouses[location]', nil, class: "form-control", id: 'treehouse_location', placeholder: "Choose a destination" %>

  <%= date_field 'treehouses[checkin]', nil, class: "form-control datepicker text-center", placeholder: "Checkin" %>

  <%= date_field 'treehouses[checkout]', nil, class: "form-control datepicker text-center", placeholder: "Checkout" %>

  <%= select_tag 'treehouses[guests_number]', options_for_select([['1'], ['2'], ['3'], ['4']]), class: "form-control text-center", prompt: "Guests", value: 0 %>

  <%= submit_tag "Search", class: "btn btn-large btn-primary" %>
<% end %>
