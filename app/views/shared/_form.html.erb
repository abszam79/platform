<%= form_tag treehouses_path, method: :get, class: 'form-inline' do %>

  <%= text_field_tag 'treehouses[location]', nil, class: "form-control text-center", id: 'treehouse_location', placeholder: "Choose destination", autofocus: true %>

  <%= date_field 'treehouses[checkin]', nil, class: "form-control datepicker text-center date-input", placeholder: "Checkin" %>

  <%= date_field 'treehouses[checkout]', nil, class: "form-control datepicker text-center date-input", placeholder: "Checkout" %>

  <%= select_tag 'treehouses[guests_number]', options_for_select([['1'], ['2'], ['3'], ['4']]), class: "form-control text-center unselected", id: 'guest', prompt: "Guests" %>

  <%= submit_tag "Search", class: "btn home-btn" %>
<% end %>
